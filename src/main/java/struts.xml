<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
  <constant name="struts.devMode" value="true"/>
    <package name="com.diworksdev.diblog.action" extends="struts-default">
    
      <action name="HomeAction" class="com.diworksdev.diblog.action.HomeAction" method="execute">
        <result name="success">index.jsp</result>
      </action>
    
      <action name="RegistAction" class="com.diworksdev.diblog.action.RegistAction" method="execute">
        <result name="success">regist.jsp</result>
      </action>
      
      <action name="RegistConfirmAction" class="com.diworksdev.diblog.action.RegistConfirmAction" method="execute">
        <result name="success">regist_confirm.jsp</result>
        <result name="error">regist.jsp</result>
      </action>
    
      <action name="RegistCompleteAction" class="com.diworksdev.diblog.action.RegistCompleteAction" method="execute">
        <result name="success">regist_complete.jsp</result>
        <result name="error">regist.jsp</result>
      </action>
      
      <action name="ListAction" class="com.diworksdev.diblog.action.ListAction" method="execute">
        <result name="success">list.jsp</result>
      </action>
      
      <action name="DeleteAction" class="com.diworksdev.diblog.action.DeleteAction" method="execute">
        <result name="success">delete.jsp</result>
      </action>
      
      <action name="DeleteConfirmAction" class="com.diworksdev.diblog.action.DeleteConfirmAction" method="execute">
      	<result name="success">delete_confirm.jsp</result>
      </action> 
      
      <action name="DeleteCompleteAction" class="com.diworksdev.diblog.action.DeleteCompleteAction" method="execute">
        <result name="success">delete_complete.jsp</result>      
      </action>
      
      <action name="UpdateAction" class="com.diworksdev.diblog.action.UpdateAction" method="execute">
        <result name="success">update.jsp</result>
      </action>
      
      <action name="UpdateConfirmAction" class="com.diworksdev.diblog.action.UpdateConfirmAction" method="execute">
        <result name="success">update_confirm.jsp</result>
      </action>
    </package>
    
</struts>